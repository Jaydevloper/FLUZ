{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": ["./tsconfig.json"],
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint/eslint-plugin", "simple-import-sort"],
    "root": true,
    "ignorePatterns": ["*.js"],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "variable",
          "types": ["boolean"],
          "format": ["PascalCase"],
          "prefix": ["is", "should", "has", "can", "will", "does", "are", "in"]
        },
        {
          "selector": "class",
          "format": ["PascalCase"]
        },
        {
          "selector": "typeAlias",
          "format": ["PascalCase"],
          "prefix": ["T"]
        },
        {
          "selector": ["enum", "enumMember"],
          "format": ["PascalCase", "UPPER_CASE"]
        },
        {
          "selector": "interface",
          "format": ["PascalCase"],
          "custom": {
            "regex": "^I[A-Z]",
            "match": true
          }
        },
        {
          "selector": "typeParameter",
          "format": ["PascalCase"],
          "prefix": ["T"]
        }
      ]
    }
  }
  